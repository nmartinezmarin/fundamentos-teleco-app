<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulacion.tipos.modulacion.TiposModulacionSSBActivity">

    <TextView
        android:id="@+id/txt_tipos_modulacion_doble_banda_lateral_unica"
        android:layout_width="189dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:text="@string/txt_tipos_modulacion_doble_banda_lateral_unica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_tipos_modulacion_doble_banda_lateral_unica"
        android:layout_width="336dp"
        android:layout_height="242dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipos_modulacion_doble_banda_lateral_unica">

        <TextView
            android:id="@+id/txv_tipos_modulacion_doble_banda_lateral_unica"
            android:layout_width="327dp"
            android:layout_height="83dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintStart_toStartOf="parent" />
    </ScrollView>


    <ImageView
        android:id="@+id/img_tipos_modulacion_doble_banda_lateral_unica"
        android:layout_width="352dp"
        android:layout_height="154dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/banda_ssb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView_tipos_modulacion_doble_banda_lateral_unica" />

</androidx.constraintlayout.widget.ConstraintLayout>