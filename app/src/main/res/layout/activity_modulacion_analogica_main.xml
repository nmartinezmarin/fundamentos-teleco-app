<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulacion.ModulacionAnalogicaMainActivity">

    <TextView
        android:id="@+id/txt_onda_titulo_1"
        android:layout_width="189dp"
        android:layout_height="28dp"
        android:layout_marginTop="72dp"
        android:text="@string/txt_modulacion_titulo_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView_modulacion_analogica"
        android:layout_width="329dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_onda_titulo_1"
        app:layout_constraintVertical_bias="0.085">

        <TextView
            android:id="@+id/txv_onda_electromagnetica"
            android:layout_width="327dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:text="@string/txt_modulacion_definicion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintStart_toStartOf="parent" />


    </ScrollView>

    <ImageView
        android:id="@+id/img_modulacion_analogica"
        android:layout_width="331dp"
        android:layout_height="214dp"
        android:src="@drawable/modulacion_analogica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView_modulacion_analogica"
        app:layout_constraintVertical_bias="0.272" />

</androidx.constraintlayout.widget.ConstraintLayout>