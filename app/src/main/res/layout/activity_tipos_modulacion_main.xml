<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulacion.TiposModulacionMainActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="256dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_tipos_modulacion_convencional"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irAAM"
                android:text="@string/txt_tipos_modulacion_convencional"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_tipos_modulacion_doble_banda_lateral_unica"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irASSB"
                android:text="@string/txt_tipos_modulacion_doble_banda_lateral_unica"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_tipos_modulacion_doble_banda_lateral_vestigial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irAVSB"
                android:text="@string/txt_tipos_modulacion_doble_banda_lateral_vestigial"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_tipos_modulacion_doble_banda_lateral_suprimida"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irADSB"
                android:text="@string/txt_tipos_modulacion_doble_banda_lateral_suprimida"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_tipos_modulacion_fm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irAFM"
                android:text="@string/txt_tipos_modulacion_fm"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_tipos_modulacion_pm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="irAPM"
                android:text="@string/txt_tipos_modulacion_pm"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>